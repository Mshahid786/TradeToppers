@model IEnumerable<TechBiteERP.Model.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Index";
    ViewData["CurrentPage"] = "List Users";

   // Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>List of Registered Users.</h5>



                <div class="ibox-content">
                    <div class="text-center">
                        <a class="btn btn-primary pull-left m-t-n-xs" asp-action="Register"><strong>Create New</strong></a>
                    </div>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th>
                                    @Html.DisplayNameFor(model => model.Username)
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Email)
                                </th>
                                <th>
                                    Designation
                                </th>
                                <th>
                                    Active Check
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.IsMaster)
                                </th>
                                @*<th>
                                    @Html.DisplayNameFor(model => model.Photo)
                                </th>*@
                                <th>
                                    Edit
                                </th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Username)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Email)
                                    </td>
                                    <td>
                                    </td>
                                    <td>
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.IsMaster)
                                    </td>
                                    @*<td>
                                        <img alt="image" class="message-avatar" src=@item.Photo />
                                    </td>*@
                                    <td>
                                        <a asp-action="EditRegisteredUser" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-edit"></i></a>
                                        @*<a asp-action="AssignRole" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.Id"><i class="fa fa-user"></i></a>*@
                                    </td>

                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
