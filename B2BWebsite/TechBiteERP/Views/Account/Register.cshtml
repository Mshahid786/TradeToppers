@model TechBiteERP.Model.ViewModels.RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<h1>Register</h1>

<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">

            </div>
            <div class="ibox-content ibox-content-">
                <form class="form-horizontal" asp-action="Register" enctype="multipart/form-data" asp-controller="Account" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="FullName" class="col-lg-4 control-label">Employee Name</label>
                                <div class="col-lg-8">
                                    <select name="FullName" class="form-control" asp-for="FullName" asp-items="@ViewBag.Employees">
                                        <option selected="selected">Select...</option>
                                    </select>
                                    <span asp-validation-for="FullName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserName" class="col-lg-4 control-label"></label>
                                <div class="col-lg-8">
                                    <input asp-for="UserName" class="form-control" />
                                    <span asp-validation-for="UserName" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Email" class="col-lg-4 control-label"></label>
                                <div class="col-lg-8">
                                    <input asp-for="Email" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label class="col-lg-4 control-label">Designation</label>
                                <div class="col-lg-8">
                                    <input class="form-control" />

                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="Password" class="col-lg-4 control-label"></label>
                                <div class="col-lg-8">
                                    <input asp-for="Password" class="form-control" />
                                    <span asp-validation-for="Password" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="ConfirmPassword" class="col-lg-4 control-label"></label>
                                <div class="col-lg-8">
                                    <input asp-for="ConfirmPassword" class="form-control" data-validation="required" />
                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserRoles" class="col-lg-4 control-label">Responsibility</label>
                                <div class="col-lg-8">
                                    <select name="UserRoles" class="form-control" asp-for="UserRoles" asp-items="@ViewBag.Role">
                                        <option selected="selected">Select...</option>
                                    </select>
                                    <span asp-validation-for="UserRoles" class="text-danger"></span>
                                </div>
                            </div>
                            <div class="form-group">
                                <label asp-for="UserType" class="col-lg-4 control-label">Type</label>
                                <div class="col-lg-8">
                                    <select ame="UserRoles" class="form-control" p-for="UserRoles">
                                        <option value="1">MMD</option>
                                        <option value="2">Employee</option>
                                    </select>
                                    <span asp-validation-for="UserType" class="text-danger"></span>
                                </div>
                            </div>
                            @*<div class="row">
                                <div class="col-md-12">
                                    <div class="form-group">
                                        <div class="col-lg-4">  </div>
                                        <div class="col-lg-8">
                                            <div class="checkbox checkbox-success">
                                                <input id="isActive" type="checkbox" checked="" data-val="true" data-val-required="The IsActive field is required." name="IsActive" value="true">
                                                <label for="isActive">Active</label>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                </div>
                            </div>*@
                        </div>

                        <div class="col-md-3">
                            <div class="row">

                                <img src="~/img/userphotos/favicon.png" class="img-circle" style=" width: 200px; height : 200px;" />

                            </div>
                            <div class="row">
                                <div class="form-group">
                                    <div class="col-lg-10">
                                        <input name="img" type="file" asp-for="Photo" class="form-control" />
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <div class="col-lg-4 col-lg-offset-2">

                                    <input type="submit" value="Register" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>