@model ArCustomer
@{
    ViewData["Title"] = "Create Customer";
    ViewData["CurrentPage"] = "Customer";

}
@section customCSS{
    <link href="~/css/plugins/jsGrid/jsgrid.css" rel="stylesheet" />
    <link href="~/css/plugins/jsGrid/jsgrid-theme.css" rel="stylesheet" />
    <link href="~/css/plugins/jasny/jasny-bootstrap.min.css" rel="stylesheet">
    <link href="~/css/plugins/codemirror/codemirror.css" rel="stylesheet">
    <style>
        .jsgrid-grid-body {
            height: auto !important;
        }

        .hide {
            display: none;
        }
    </style>
}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                 
                <h2 style="color:red;"> <label class="control-label"> Customer Defination </label></h2>
            </div>
            <div class="ibox-content">
                <form class="form-horizontal" id="CustomerForm" method="post" asp-action="Create" asp-controller="Customer" enctype="multipart/form-data" onsubmit="return checkValidation();">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div>
                        <input type="hidden" asp-for="Id" />
                    </div>
                    <div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="GLCode" class="col-lg-4 control-label"></label>
                                <div class="col-lg-8">
                                    <select name="GLCode" class="form-control" asp-for="GLCode" asp-items="@ViewBag.Accounts">
                                        <option selected="selected">Select...</option>
                                    </select>
                                    <span asp-validation-for="GLCode" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="SalesPersonId" class="col-lg-4 control-label"> Sales Person</label>
                                <div class="col-lg-8">
                                    <select name="SalesPersonId" class="form-control" asp-for="SalesPersonId" asp-items="@ViewBag.SalesMan">
                                        <option selected="selected">Select...</option>
                                    </select>
                                    <span asp-validation-for="SalesPersonId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Name" class="col-lg-4 control-label"></label>
                                <div class="col-lg-8">
                                    <input asp-for="Name" data-validation="required" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PhoneNo" class="col-lg-4 control-label"></label>
                                <div class="col-lg-8">
                                    <input asp-for="PhoneNo"  type="tel" pattern="^\d{4}-\d{3}-\d{4}$" data-validation="required" class="form-control" />
                                    <span asp-validation-for="PhoneNo" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Email" class="col-lg-4 control-label"></label>
                                <div class="col-lg-8">
                                    <input asp-for="Email" type="email" data-validation="required" class="form-control" />
                                    <span asp-validation-for="Email" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CNIC" class="col-lg-4 control-label"></label>
                                <div class="col-lg-8">
                                    <input asp-for="CNIC" data-validation="required" class="form-control" />
                                    <span asp-validation-for="CNIC" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ContactPerson" class="col-lg-4 control-label"></label>
                                <div class="col-lg-8">
                                    <input asp-for="ContactPerson" data-validation="required" class="form-control" />
                                    <span asp-validation-for="ContactPerson" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="MobileNo" class="col-lg-4 control-label"></label>
                                <div class="col-lg-8">
                                    <input asp-for="MobileNo" data-validation="required" class="form-control" />
                                    <span asp-validation-for="MobileNo" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Address" class="col-lg-2 control-label"></label>
                                <div class="col-lg-10">
                                    <input asp-for="Address" data-validation="required" class="form-control" />
                                    <span asp-validation-for="Address" class="text-danger"></span>

                                </div>
                            </div>
                        </div>

                    </div>
                    <div class="row">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="ProvinceId" class="col-lg-6 control-label">Province</label>
                                <div class="col-lg-6">
                                    <select name="ProvinceId" class="form-control" asp-for="ProvinceId" asp-items="@ViewBag.Province">
                                        <option selected="selected">Select...</option>
                                        
                                    </select>
                                    <span asp-validation-for="ProvinceId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="RegionId" class="col-lg-4 control-label">Region</label>
                                <div class="col-lg-8">
                                    <select name="RegionId" class="form-control" asp-for="RegionId" asp-items="@ViewBag.Region">
                                        <option selected="selected">Select...</option>
                                        
                                    </select>
                                    <span asp-validation-for="RegionId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="DistrictId" class="col-lg-4 control-label">District</label>
                                <div class="col-lg-8">
                                    <select name="DistrictId" class="form-control" asp-for="DistrictId" asp-items="@ViewBag.District">
                                        <option selected="selected">Select...</option>
                                        
                                    </select>
                                    <span asp-validation-for="DistrictId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-3">
                            <div class="form-group">
                                <label asp-for="CityId" class="col-lg-4 control-label">City</label>
                                <div class="col-lg-8">
                                    <select name="CityId" class="form-control" asp-for="CityId" asp-items="@ViewBag.City">
                                        <option selected="selected">Select...</option>
                                         
                                    </select>
                                    <span asp-validation-for="CityId" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">

                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="DiscountType" class="col-lg-6 control-label">Discount</label>
                                <div class="col-lg-6">
                                    <select name="DiscountType" class="form-control" asp-for="DiscountType">
                                        <option selected="selected">Select...</option>
                                        <option value="1">On Sale</option>
                                        <option value="2">On Collection</option>
                                    </select>
                                    <span asp-validation-for="DiscountType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="DiscountPer" class="col-lg-4 control-label">%</label>
                                <div class="col-lg-8">
                                    <input asp-for="DiscountPer" data-validation="required" class="form-control" />
                                    <span asp-validation-for="DiscountPer" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="AnnualDiscountType" class="col-lg-5 control-label">Annual Discount</label>
                                <div class="col-lg-7">
                                    <select name="AnnualDiscountType" class="form-control" asp-for="AnnualDiscountType">
                                        <option selected="selected">Select...</option>
                                        <option value="1">On Sale</option>
                                        <option value="2">On Collection</option>
                                    </select>
                                    <span asp-validation-for="AnnualDiscountType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-2">
                            <div class="form-group">
                                <label asp-for="AnnualDiscountPer" class="col-lg-4 control-label">%</label>
                                <div class="col-lg-8">
                                    <input asp-for="AnnualDiscountPer" data-validation="required" class="form-control" />
                                    <span asp-validation-for="AnnualDiscountPer" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="InvoiceDiscount" class="col-lg-4 control-label">Invoice Discount</label>
                                <div class="col-lg-8">
                                    <input asp-for="InvoiceDiscount" data-validation="required" class="form-control" />
                                    <span asp-validation-for="InvoiceDiscount" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ChequeAmount" class="col-lg-4 control-label">Cheque Amount</label>
                                <div class="col-lg-8">
                                    <input asp-for="ChequeAmount" data-validation="required" class="form-control" />
                                    <span asp-validation-for="ChequeAmount" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CreditDays" class="col-lg-4 control-label">Credit Days</label>
                                <div class="col-lg-8">
                                    <input asp-for="CreditDays" data-validation="required" class="form-control" />
                                    <span asp-validation-for="CreditDays" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CreditLimitAmount" class="col-lg-4 control-label">Credit Limit Amount</label>
                                <div class="col-lg-8">
                                    <input asp-for="CreditLimitAmount" data-validation="required" class="form-control" />
                                    <span asp-validation-for="CreditLimitAmount" class="text-danger"></span>

                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="CustomerType" class="col-lg-4 control-label">Customer Type</label>
                                <div class="col-lg-8">
                                    <select name="CustomerType" class="form-control" asp-for="CustomerType">
                                        <option selected="selected">Select...</option>
                                        <option value="1">Regular</option>
                                        <option value="2">Walking Customer</option>
                                        <option value="3">MMD</option>
                                    </select>
                                    <span asp-validation-for="CustomerType" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                        <div class="col-lg-4 chiller_cb">
                            <div class="chiller_cb pull-right">
                                <input asp-for="CheckCrLimit" id="myCheckbox1" type="checkbox" checked>
                                <label for="myCheckbox">Check Cr Limit</label>
                                <span></span>
                            </div>
                        </div>
                        <div class="col-lg-2 chiller_cb">
                            <div class="chiller_cb">
                                <input asp-for="Blocked" id="myCheckbox" type="checkbox" checked>
                                <label for="myCheckbox">Blocked</label>
                                <span></span>
                            </div>
                        </div><br />
                    </div>
                    <div class="row">
                       
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="col-lg-4 col-lg-offset-4">
                                    <a class="btn btn-white" asp-action="Index" asp-controller="Customer">Back</a>
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section customJS{
    <script src="~/lib/validate/jquery.validate.min.js"></script>
    <script>
        function checkValidation() {
            debugger;
            var Name = $('#Name').val();
            var GLCode = $('#GLCode').val();
            var CustomerType = $('#CustomerType').val();
            var CityId = $('#CityId').val();
            var ProvinceId = $('#ProvinceId').val();
            var RegionId = $('#RegionId').val();
            var DistrictId = $('#DistrictId').val();
            var SalesPersonId = $('#SalesPersonId').val();
            var Address = $('#Address').val();
            var ContactPerson = $('#ContactPerson').val();
            var MobileNo = $('#MobileNo').val();
            var CreditDays = Number($('#CreditDays').val());

            if (Name == "") {
                swal("", "Please Enter Name First", "error");
                return false;
            }
            if (GLCode == "Select...") {
                swal("", "Please Select GL Code First", "error");
                return false;
            }
            if (SalesPersonId == "Select...") {
                swal("", "Please Select Sales Person First", "error");
                return false;
            }
            if (CityId == "Select...") {
                swal("", "Please Select City First", "error");
                return false;
            }
            if (ProvinceId == "Select...") {
                swal("", "Please Select Province First", "error");
                return false;
            }
            if (RegionId == "Select...") {
                swal("", "Please Select Region First", "error");
                return false;
            }
            if (DistrictId == "Select...") {
                swal("", "Please Select District First", "error");
                return false;
            }
            if (Address == "") {
                swal("", "Please Enter Address First", "error");
                return false;
            }
            if (ContactPerson == "") {
                swal("", "Please Enter Contact Person First", "error");
                return false;
            }
            if (MobileNo == "") {
                swal("", "Please Enter Mobile No First", "error");
                return false;
            }
            if (CreditDays == "0") {
                swal("", "Please Enter Credit Days First", "error");
                return false;
            }
            if (CustomerType == "Select...") {
                swal("", "Please Select Customer Type First", "error");
                return false;
            }

            return true;
        }
    </script>
}
