@model TechBiteERP.Model.Models.PriceCategory
@{
    ViewData["Title"] = "Create Price Category";
    ViewData["CurrentPage"] = "Price Category";
    Layout = "~/Pages/Shared/_Layout.cshtml";

}
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">

                <h2 style="color:red;"> <label class="control-label">  Price Category Defination</label></h2>
            </div>
            <div class="ibox-content">
                <form class="form-horizontal" id="areaForm" method="post" asp-action="Create" asp-controller="PriceCategory" enctype="multipart/form-data" onsubmit="return checkValidation();">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div>
                        <input type="hidden" asp-for="ID" />
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label  -for="Name" class="col-lg-4 control-label">Price Category</label>
                                <div class="col-lg-8">
                                    <input asp-for="Name" data-validation="required" class="form-control" />
                                    <span asp-validation-for="Name" class="text-danger"></span>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <div class="col-lg-4 col-lg-offset-4">
                                    <a class="btn btn-white" asp-action="Index" asp-controller="PriceCategory">Back</a>
                                    <input type="submit" value="Create" class="btn btn-primary" />
                                </div>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section customJS{
    <script src="~/lib/jquery-form-validator/jquery.form-validator.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script>
        function checkValidation() {
            debugger;
            var Name = $('#Name').val();
            if (Name == "") {
                swal("", "Please Enter Price Category First", "error");
                return false;
            }

            return true;
        }
    </script>
}
