@model IEnumerable<TechBiteERP.Model.Models.Branch>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h2>Index</h2>

<p>
    <a asp-action="Create">Create New</a>
</p>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h5>List of Branch</h5>

                <div class="ibox-content">
                    <table class="table dataTable_Responsive">
                        <thead>
                            <tr>
                                <th>
                                    POS Code
                                </th>
                                <th>
                                    POS Name
                                </th>
                                <th>
                                    @Html.DisplayNameFor(model => model.Abbreviation)
                                </th>
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.POSCode)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.POSName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Abbreviation)
                                    </td>
                                    <td class="text-center">
                                        <a asp-action="Create" class="btn btn-sm btn-primary m-t-n-xs" asp-route-id="@item.ID"><i class="fa fa-angle-right"></i></a>
                                        <a asp-action="Delete" asp-route-id="@item.ID" class="btn btn-sm btn-danger m-t-n-xs"><i class="fa fa-trash"></i></a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>