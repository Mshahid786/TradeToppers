@model TechBiteERP.Model.Models.FileUploadViewModel
@{
    ViewData["Title"] = "File";
    // Layout = "~/Views/Shared/_Layout.cshtml";
}
<style>
    h1 {
        padding: 50px;
        font-weight: 500;
    }
</style>
<div class="row">
    <div class="col-lg-12">
        <div class="ibox float-e-margins">
            <div class="ibox-title">
                <h2 style="color:red;"> <label class="control-label">Product Opening Balance </label></h2>
            </div>
            <div class="ibox-content">
                <form asp-action="File" class="text-left form-validate" enctype="multipart/form-data">
                    <div class="form-group col-sm-12">
                        <div class="file-select-button" id="fileName">Upload Excel File</div>
                        <input asp-for="XlsFile" type="file" id="chooseFile">
                    </div>
                    <br />
                    <br />
                    <br />
                    <div class="form-group col-sm-6">
                        <button type="submit" class="btn btn-primary">Read Excel File</button>
                    </div>
                </form>

                <div class="row">
                    <h1>
                        Display Excel File Records
                    </h1>
                    <table name="tblProductOpeningBalance" class="table table-active table-bordered" width="100">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>Item Code</th>
                                <th>Item Name</th>
                                <th>Opening Balance</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.StaffInfoViewModel.StaffList)
                            {
                                <tr>
                                    <td>@item.ItemId</td>
                                    <td>@item.ItemCode</td>
                                    <td>@item.ItemName</td>
                                    <td>@item.OpeningBalance</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>